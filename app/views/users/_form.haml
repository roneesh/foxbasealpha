.new_user_form

  =form_for(@user) do |f|

    .field
      =f.label :name
      %br
      =f.text_field :name
    .field
      =f.label :email
      %br 
      =f.text_field :email 
      %br
    .field
      =f.label :handle
      %br
      =f.text_field :handle 
    .field
      =f.label :password
      %br
      =f.password_field :password
    .field
      =f.label :password_confirmation
      %br
      =f.password_field :password_confirmation
    .action
      =f.submit 

