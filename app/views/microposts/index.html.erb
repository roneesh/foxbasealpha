<h1>Listing microposts</h1>

<table>
  <tr>
    <th>Content</th>
    <th>User</th>
    <th>Alpha</th>
    <th>Anonymous</th>
    <th></th>
    <th></th>
  </tr>

<% @microposts.each do |micropost| %>
  <tr>
    <td><%= micropost.content %></td>
    <td><%= micropost.user.name %></td>
    <% if micropost.alpha %>
        <td><%= link_to micropost.alpha.name, alpha_path(micropost.alpha.id) %></td>
    <% else %>
        <td>No alpha</td>
    <% end %>
    <% if micropost.anonymous %>
        <td>Anonymous</td>
    <%else%>
        <td>Not Anonymous</td>
    <%end%>
    <td><%= link_to 'Show', user_micropost_url(micropost.user_id, micropost.id) %> |</td> 
    <td><%= link_to 'Edit', edit_user_micropost_path(micropost.user_id, micropost.id) %> |</td>
    <td><%= link_to 'Destroy', user_micropost_url(micropost.user_id, micropost.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

