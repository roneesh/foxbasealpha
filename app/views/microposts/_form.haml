= form_for @micropost do |f| 
  -if @micropost.errors.any? 
    %div#error_explanation
      %h2 = pluralize(@micropost.errors.count, "error") prohibited this micropost from being saved:
      %ul
        - @micropost.errors.full_messages.each do |msg| 
          %li = msg

  .field
    = f.label :content
    %br
    = f.text_field :content 

  .field
    = f.label :user_id
    %br
    = f.text_field :user_id, value: @user_id 

  .field
    = f.label :alpha_id
    %br
    = f.text_field :alpha_id 

  .actions
    = f.submit 
    

